# 本地开发环境变量配置示例

# Vercel Postgres Database (从 Vercel Dashboard 获取)
POSTGRES_URL="postgres://default:xxx@xxx.vercel-postgres.com:5432/verceldb"
POSTGRES_PRISMA_URL="postgres://default:xxx@xxx.vercel-postgres.com:5432/verceldb?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgres://default:xxx@xxx.vercel-postgres.com:5432/verceldb"
POSTGRES_USER="default"
POSTGRES_HOST="xxx.vercel-postgres.com"
POSTGRES_PASSWORD="xxx"
POSTGRES_DATABASE="verceldb"

# Vercel KV (Redis) (从 Vercel Dashboard 获取)
KV_URL="redis://default:xxx@xxx.kv.vercel-storage.com:6379"
KV_REST_API_URL="https://xxx.kv.vercel-storage.com"
KV_REST_API_TOKEN="xxx"
KV_REST_API_READ_ONLY_TOKEN="xxx"

# 微信小程序配置 (从微信公众平台获取)
WECHAT_APP_ID="wx1234567890abcdef"
WECHAT_APP_SECRET="1234567890abcdef1234567890abcdef"
